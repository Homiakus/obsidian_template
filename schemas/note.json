{
  "$id": "schemas/note.json",
  "type": "object",
  "required": [
    "id",
    "schema",
    "type",
    "title",
    "created"
  ],
  "properties": {
    "schema": {
      "const": "v1"
    },
    "id": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}-\\d{2,6}$"
    },
    "type": {
      "const": "note"
    },
    "title": {
      "type": "string"
    },
    "project": {
      "type": "string",
      "pattern": "^PROJ-[A-Z0-9-]+$"
    },
    "category": {
      "type": "string",
      "pattern": "^CAT-[A-Z0-9-]+$"
    }
  },
  "oneOf": [
    {
      "required": [
        "project"
      ]
    },
    {
      "required": [
        "category"
      ]
    }
  ],
  "additionalProperties": true
}