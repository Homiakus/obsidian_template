{
  "$id": "schemas/project.json",
  "type": "object",
  "required": [
    "id",
    "schema",
    "type",
    "code",
    "title",
    "status",
    "created"
  ],
  "properties": {
    "schema": {
      "const": "v1"
    },
    "id": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}-\\d{2,6}$"
    },
    "type": {
      "const": "project"
    },
    "code": {
      "type": "string",
      "pattern": "^PROJ-[A-Z0-9-]+$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "enum": [
        "active",
        "paused",
        "done",
        "deprecated",
        "draft"
      ]
    },
    "primary_category": {
      "type": "string",
      "pattern": "^CAT-[A-Z0-9-]+$"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "owners": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": true
}