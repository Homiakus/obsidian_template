{
  "$id": "schemas/source.json",
  "type": "object",
  "required": [
    "id",
    "schema",
    "type",
    "subtype",
    "code",
    "title",
    "created"
  ],
  "properties": {
    "schema": {
      "const": "v1"
    },
    "id": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}-\\d{2,6}$"
    },
    "type": {
      "const": "source"
    },
    "subtype": {
      "enum": [
        "info",
        "resource"
      ]
    },
    "code": {
      "type": "string",
      "pattern": "^SRC-[A-Z0-9-]+$"
    },
    "title": {
      "type": "string"
    },
    "origin": {
      "enum": [
        "url",
        "pdf",
        "book",
        "repo",
        "other"
      ]
    },
    "url": {
      "type": "string"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": true
}